<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mouna.inscriptionandconnection">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".InscriptionChoiceActivity"></activity>
        <activity android:name=".PasswordInscriptionActivity"></activity>
        <activity android:name=".PasswordConnectionActivity"></activity>
        <activity android:name=".VocalConnectionActivity"></activity>
        <activity android:name=".VocalInscriptionActivity"></activity>
        <activity android:name=".ConnectionChoiceActivity"></activity>

        <activity
            android:name="com.example.mouna.inscriptionandconnection.myapplication.AddActivity"
            android:label="@string/title_activity_add"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.mouna.inscriptionandconnection.myapplication.DetaillActivity"
            android:label="@string/title_activity_detaill"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.mouna.inscriptionandconnection.myapplication.ConfigActivity"
            android:label="@string/title_activity_config"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.mouna.inscriptionandconnection.myapplication.ListEnregistrements"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>
