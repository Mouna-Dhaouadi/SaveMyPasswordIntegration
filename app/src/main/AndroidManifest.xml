<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mouna.inscriptionandconnection">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".helper.SampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InscriptionChoiceActivity" />
        <activity android:name=".PasswordInscriptionActivity" />
        <activity android:name=".PasswordConnectionActivity" />
        <activity android:name=".VocalConnectionActivity" />
        <activity android:name=".VocalInscriptionActivity" />
        <activity android:name=".ConnectionChoiceActivity" />
        <activity
            android:name=".myapplication.AddActivity"
            android:label="@string/title_activity_add"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".myapplication.DetaillActivity"
            android:label="@string/title_activity_detaill"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".myapplication.ConfigActivity"
            android:label="@string/title_activity_config"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".myapplication.ListEnregistrements"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FacialInscriptionActivity"
            android:label="@string/title_activity_facila_inscription"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PersonActivity"
            android:label="@string/title_activity_person"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddFaceToPersonActivity"
            android:label="@string/title_activity_add_face_to_person"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SelectImageActivity"
            android:label="@string/title_activity_select_image"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PersonGroupActivity"
            android:label="@string/title_activity_person_group"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FacialConnectionActivity"
            android:label="@string/title_activity_facial_connection"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>