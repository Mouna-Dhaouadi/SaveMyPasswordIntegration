<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.imen.myapplication.DetaillActivity"
    tools:showIn="@layout/activity_detaill"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/content_r2"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:background="@color/colorPrimary">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/imgDetaille"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/girl"
            app:border="true"

            app:border_color="#EEEEEE"
            app:border_width="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/textSiteName"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgDetaille"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/fab_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/link"
                    android:id="@+id/imageViewLinkAdd"

                    android:layout_weight="0.31" />

                <TextView
                    android:id="@+id/editTextLinkAff"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.76"
                    android:ems="10"
                    android:hint="@string/lien"
                    android:inputType="textPersonName"
                    android:textColor="@color/bleu"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/login"
                    android:id="@+id/imageViewAdd"

                    android:layout_weight="0.38" />

                <TextView
                    android:id="@+id/editTextAff"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.91"
                    android:ems="10"
                    android:hint="@string/login"
                    android:inputType="textPersonName"
                    android:textSize="18sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/mail"
                    android:id="@+id/imageEmailAff"

                    android:layout_weight="0.41" />

                <TextView
                    android:id="@+id/editTextEmailAff"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imagepasswrdAdd"
                    android:layout_width="32dp"
                    android:layout_height="32dp"

                    android:src="@drawable/mdp"
                    android:layout_weight="0.39" />

                <TextView
                    android:id="@+id/editPasswdAff"
                    android:layout_width="217dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.51"
                    android:ems="10"
                    android:hint="@string/motDP"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"

                    android:paddingLeft="0dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageDateAff"
                    android:layout_width="70dp"
                    android:layout_height="32dp"
                    android:src="@drawable/date"
                    android:layout_weight="0.09" />

                <TextView
                    android:id="@+id/editDateAff"
                    android:layout_width="298dp"

                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="@string/dateModif"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />



            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
