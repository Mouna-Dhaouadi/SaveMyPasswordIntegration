<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_100"
    >



    <TextView
        android:textColor="@color/red_900"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connection_text_view"/>




    <EditText
        android:layout_marginTop="10dp"
        android:layout_height="30dp"
        android:background="@color/yellow_200"

        android:textSize="15dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/deep_orange_800"
        android:layout_width="match_parent"
        android:id="@+id/enterPasswordFieldForConnection"

        />

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/stylo"
        android:layout_gravity="center"
        android:id="@+id/imageView" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonConnection"
        android:text="@string/connection"

        android:layout_marginTop="50dp"
        android:background="@color/yellow_300"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/red_900"

        />

</LinearLayout>

